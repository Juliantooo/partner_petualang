  <script src="/assets/modules/nicescroll/jquery.nicescroll.min.js"></script>
  <script src="/assets/modules/moment.min.js"></script>
  <script src="/assets/js/stisla.js"></script>

  <!-- JS Libraies -->
  <script src="/assets/modules/jquery-ui/jquery-ui.min.js"></script>

  <!-- Page Specific JS File -->
  <script src="/assets/js/page/components-table.js"></script>

  <!-- Template JS File -->
  <script src="/assets/js/scripts.js"></script>
  <script src="/assets/js/custom.js"></script>
  <script>

    const btnUpdate = document.getElementsByTagName('tr')
    let idx, res
    for (idx = 0; idx < btnUpdate.length; idx++) {
      let a = btnUpdate[idx + 1].getElementsByTagName('td')[5].getElementsByTagName('button')[0]
      a.addEventListener('click', () => {
        res = a.getAttributeNode('data-id').textContent.split(',')
        document.getElementById('form-update').setAttribute('action', '/user/{{profile.id_user}}/barang/update/' + `${res[0]}`)
        document.getElementById('nama_barang').setAttribute('value', res[1])
        document.getElementById('harga_barang').setAttribute('value', res[2])
        document.getElementById('stock').setAttribute('value', res[3])
      })
    }
  </script>

</body>

