          <div class="section-header">
            {{#each transaksi}}
            <h1>{{dataValues.id_user}}</h1>
            {{/each}}
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
              <div class="breadcrumb-item"><a href="#">Components</a></div>
              <div class="breadcrumb-item">Table</div>
            </div>
          </div>

          <div class="section-body">
            <h2 class="section-title">Daftar Barang</h2>
            <p class="section-lead">Daftar barang di partner petualang</p>

            <div class="row container-fluid my-5 justify-content-center">
              {{#each data}}
              <div class="card col-12 col-sm-12 col-md-3 mx-2 text-center" style="width: 10rem;">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">{{dataValues.nama_barang}}</h6>
                  <h6 class="card-subtitle" style="font-size:109%">Rp.{{dataValues.harga_barang}}</h6><br>
